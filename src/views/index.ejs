<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>NodejsBase</title>
	<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
	<link rel="stylesheet" href="css/style.css">
</head>
<body>
	<div class="topnav">
	  <a class="active" href="#home">Home</a>
	  <a href="#news">News</a>
	  <a href="#contact">Contact</a>
	  <a href="#about">About</a>
	</div>

	<div>
	  <div class="w3-container">
		  <h2>List user Table</h2>

		  <table class="w3-table-all w3-hoverable">
		    <thead>
		      <tr class="w3-light-grey">
		      	<th>Id</th>
		        <th>First Name</th>
		        <th>Last Name</th>
		        <th>Action</th>
		      </tr>
		    </thead>
		    <% for(let i=0; i < dataUser.length; i++) { %>
			   <tr>
			     <td><%= dataUser[i].id %></td>
			     <td><%= dataUser[i].firstName %></td>
			     <td><%= dataUser[i].lastName %></td>
			     <td>
			     	<button type="button"><a href="detail/user/<%= dataUser[i].id %>" >Detail</a></button>
			     	<button type="button"><a href="edit/user/<%= dataUser[i].id %>" >Edit</a></button>
			     	<button type="button"><a href="delete/user/<%= dataUser[i].id %>" >Delete</a></button>
			     </td>
			   </tr>
			<% } %>
		  </table>
		</div>
	</div>

</body>
</html>